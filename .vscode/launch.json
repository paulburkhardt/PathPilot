            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/MASt3R-SLAM/",
            "args": [
                "--dataset", 
                "/usr/prakt/s0124/AFM/PathPilot/Data/one_chair.mp4", 
                "--config", 
